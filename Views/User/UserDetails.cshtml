@model IEnumerable<SmartHotelBooking.Models.RegisterUser>
<br/>
<br />
<a asp-controller="Manager" asp-action="ManagerHome" class="btn btn-primary btn-lg">Back</a>
<br />
<br />
<h1>Users Details</h1>
<br />
<form method="get" asp-action="UserDetails" class="mb-4">
    <div class="input-group">
        <input type="text" name="searchUser" class="form-control" placeholder="Search by name or email" value="@ViewData["SearchUser"]" />
    <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>
@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Address</th>
                <th>Role</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.FirstName @user.LastName</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    <td>@user.Address</td>
                    <td>@user.Role</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning" role="alert">
        No users found under your management.
    </div>
}
