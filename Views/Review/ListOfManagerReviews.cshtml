@model IEnumerable<SmartHotelBooking.Models.Review>
<br />
<br/>

<a asp-controller="Manager" asp-action="ManagerHome" class="btn btn-primary btn-lg">Back</a>
<br />
<br />

<h2>Hotels Reviews</h2>

<!-- Search Bar -->
<form method="get" asp-action="ListOfManagerReviews" class="mb-4">
    <div class="input-group">
        <input type="text" name="searchHotel" class="form-control" placeholder="Search by Hotel Name" value="@ViewData["SearchHotel"]" />
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>

@if (Model != null && Model.Any())

{
    <table class="table">
        <thead>
            <tr>
                <th>Hotel Name</th>
                <th>Rating</th>
                <th>Comment</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var review in Model)

            {
                <tr>
                    <td>@review.HotelName</td>
                    <td>@review.Rating</td>
                    <td>@review.Comment</td>
                    <td>
                        <a asp-action="DeleteReview" asp-route-reviewId="@review.ReviewId" class="btn btn-danger">Delete</a>
                    </td>
                </tr>

            }
        </tbody>
    </table>

}

else

{
    <div class="alert alert-warning">No reviews found.</div>

}

