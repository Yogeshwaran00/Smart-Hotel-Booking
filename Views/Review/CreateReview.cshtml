@model SmartHotelBooking.Models.Review
<br />
<br />
<a asp-controller="Hotel" asp-action="ListOfForMemberHotels" class="btn btn-primary btn-lg">Back</a>
<br />
<br />
<h2>Create Review</h2>
<br />
<form asp-action="CreateReview" method="post">
        <div class="mb-3">
            <label for="Rating" class="form-label">Hotel Rating:</label>
            <div class="star-rating">
                @for (int i = 5; i >= 1; i--)
                {
                <input type="radio" id="star-@i" name="Rating" value="@i" @(Model?.Rating == i ? "checked" : "") />
                    <label for="star-@i" class="star">&#9733;</label>
                }
            </div>
    </div>
    <div class="form-group">
        <label asp-for="Comment"></label>
<textarea asp-for="Comment" class="form-control"></textarea>
    </div>
    <input type="hidden" asp-for="ReviewId" value="@Model.ReviewId" />
    <input type="hidden" asp-for="HotelId" value="@Model.HotelId" />
    <input type="hidden" asp-for="RegisterId" value="@Model.RegisterId" />
    <input type="hidden" asp-for="TimeStamp" value="@DateTime.Now" />
    <input type="hidden" asp-for="HotelName" value="@Model.HotelName" />
    <br/>
    @* <input type="hidden" asp-for="User.RegisterId" value="@Model.User?.RegisterId" /> *@
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
