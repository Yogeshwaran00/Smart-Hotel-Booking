@model SmartHotelBooking.Models.Room
<br />
<br />
<a asp-controller="Hotel" asp-action="ListOfManagerHotels" class="btn btn-primary btn-lg">Back</a>

<br />
<br />
@{

    ViewData["Title"] = "Create Room";

}


<h2>Create Room</h2>

<div class="outer-container">
<form class="form-container" asp-action="CreateRoom" method="post" class="form-container">

    <div class="mb-3">

        <label asp-for="RoomType" class="form-label"></label>

        <input asp-for="RoomType" class="form-control" />

        <span asp-validation-for="RoomType" class="text-danger"></span>

    </div>


    <div class="mb-3">

        <label asp-for="Features" class="form-label"></label>

        <input asp-for="Features" class="form-control" />

        <span asp-validation-for="Features" class="text-danger"></span>

    </div>


    <div class="mb-3">

        <label asp-for="Price" class="form-label"></label>

        <input asp-for="Price" class="form-control" />

        <span asp-validation-for="Price" class="text-danger"></span>

    </div>


    <div class="mb-3">

        <label asp-for="Capacity" class="form-label"></label>

        <input asp-for="Capacity" class="form-control" />

        <span asp-validation-for="Capacity" class="text-danger"></span>

    </div>


    <div class="mb-3">

        <label asp-for="IsAvailable" class="form-label"></label>

        <input asp-for="IsAvailable" class="form-check-input" type="checkbox" />

        <span asp-validation-for="IsAvailable" class="text-danger"></span>

    </div>


    <div class="mb-3">

        <label asp-for="HotelId" class="form-label">Hotel</label>

        <select asp-for="HotelId" class="form-select" asp-items="ViewBag.HotelId">

            <option value="">-- Select Hotel --</option>

        </select>

        <span asp-validation-for="HotelId" class="text-danger"></span>

    </div>


    <button type="submit" class="btn btn-primary">Create Room</button>

</form>
</div>

@section Scripts {

    @{

        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }

}

