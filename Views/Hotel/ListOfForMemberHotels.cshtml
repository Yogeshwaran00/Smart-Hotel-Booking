@model IEnumerable<SmartHotelBooking.Models.Hotel>
<br />
<br />
<a asp-controller="Member" asp-action="MemberHome"  class="btn btn-primary btn-lg">Back</a>
<br />
<br />
<h1>List of Hotels</h1>
<br />

@if (Model != null && Model.Any())
{
    @foreach (var hotel in Model)
    {
        <div class="p-5 mb-4 bg-light rounded-3 shadow-sm">
            <div class="container-fluid d-flex align-items-center">
                <!-- Left Side: Text Content -->
                <div class="flex-grow-1">
                    <h1 class="display-5 fw-bold text-primary">@hotel.HotelName</h1>
                    <p class="col-md-8 fs-4 text-secondary">@hotel.HotelDescription</p>
                    <div class="mb-2"><strong>Located at:</strong> @hotel.HotelLocation</div>
                    <p class="col-md-8 fs-4 text-secondary"><strong>Rating :</strong> @hotel.HotelRating</p>
                    <a asp-controller="Hotel" asp-action="HotelDetails" asp-route-HotelId="@hotel.HotelId" class="btn btn-primary btn-lg">View Details</a>
                    <a asp-controller="Hotel" asp-action="ViewRooms" asp-route-HotelId="@hotel.HotelId" class="btn btn-primary btn-lg">View Rooms</a>
                </div>

                <!-- Right Side: Image -->
                <div class="ms-4">
                    <img src="@hotel.HotelImageUrl" alt="Hotel Image" class="img-fluid rounded" style="max-width: 500px; max-height: 200px;">
                </div>
            </div>
        </div>
        <br />
    }
}
else
{
    <div class="alert alert-warning" role="alert">
        No hotels available.
    </div>
}
