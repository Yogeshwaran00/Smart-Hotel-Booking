@model IEnumerable<SmartHotelBooking.Models.Room>
<br />
<a asp-controller="Hotel" asp-action="ListOfManagerHotels" class="btn btn-primary btn-lg">Back</a>
<br />
<h2 class="text-center">Rooms</h2>
<br />
@if (Model != null && Model.Any())
{
    <div class="room-list">
        @foreach (var room in Model)
        {
            <div class="room-card">
                <div class="room-details">
                    <h3 class="room-type">@room.RoomType</h3>
                    <p><strong>Status:</strong> @(room.IsAvailable ? "Available" : "Not Available")</p>
                    <a asp-controller="Room" asp-action="ManagerRoomDetails" asp-route-RoomId="@room.RoomId" class="btn btn-primary">View Details</a>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-warning text-center" role="alert">
        No rooms available.
    </div>
}
